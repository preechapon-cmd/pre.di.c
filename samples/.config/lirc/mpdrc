## lirc include config file



# music player daemon

# mode mpd
begin mpd
    begin
         prog = irexec
         button = KEY_PLAY
         config = /usr/bin/mpc play
    end
    begin
         prog = irexec
         button = KEY_PAUSE
         config = /usr/bin/mpc toggle
    end
    begin
         prog = irexec
         button = KEY_STOP
         config = /usr/bin/mpc stop
    end
    begin
         prog = irexec
         button = KEY_PREVIOUSSONG
         config = /usr/bin/mpc prev
    end
    begin
         prog = irexec
         button = KEY_NEXTSONG
         config = /usr/bin/mpc next
    end
    begin
         prog = irexec
         button = KEY_FASTFORWARD
		 repeat = 1
		 delay = 1
         config = /usr/bin/mpc seek +00:00:10
    end
    begin
         prog = irexec
         button = KEY_REWIND
		 repeat = 1
		 delay = 1
         config = /usr/bin/mpc seek -00:00:10
    end
end mpd

