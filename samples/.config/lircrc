## lirc main config file

# modes

# mixer
include ~/.config/lirc/mixerrc

# EQ and XO
include ~/.config/lirc/eqrc

# music player daemon
include ~/.config/lirc/mpdrc

# mplayer tdt
include ~/.config/lirc/DVBrc

begin loudness_ref

    begin
        prog = irexec
        button = KEY_UP
        config = ~/bin/control 'loudness_ref +1 add'
        repeat = 1
        flags = quit
    end

    begin
        prog = irexec
        button = KEY_DOWN
        config = ~/bin/control 'loudness_ref -1 add'
        repeat = 1
        flags = quit
    end

    begin
        button = KEY_EXIT
        flags = mode
#        button = KEY_MENU
#        flags = quit
    end

end loudness_ref


# Starts in mpd mode

begin
	flags = startup_mode
	mode = mpd
end


# on / off

begin
	prog = irexec
	button = KEY_POWER2
	config = ~/bin/restartaudio
end
begin
	prog = irexec
    button = KEY_SELECT
	config = ~/bin/stopaudio
end


# sound controls

begin
     prog = irexec
     button = KEY_OK
	 config = ~/bin/control 'mute toggle'
end

begin
    prog = irexec
    button = KEY_PREVIOUS
	config = ~/bin/control 'loudness toggle'
end

begin
    prog = irexec
    button = KEY_MUTE
    config = ~/bin/control 'tones toggle'
end

begin
    prog = irexec
    button = KEY_VOLUMEUP
    config = ~/bin/control 'bass +1 add'
    repeat = 1
    delay = 1
end

begin
    prog = irexec
    button = KEY_VOLUMEDOWN
    config = ~/bin/control 'bass -1 add'
    repeat = 1
    delay = 1
end

begin
    prog = irexec
    button = KEY_CHANNELUP
    config = ~/bin/control 'treble +1 add'
    repeat = 1
    delay = 1
    flags = quit
end

begin
    prog = irexec
    button = KEY_CHANNELDOWN
    config = ~/bin/control 'treble -1 add'
    repeat = 1
    delay = 1
    flags = quit
end


# levels

begin
    prog = irexec
    button = KEY_UP
	config = ~/bin/control 'level +1 add'
    repeat = 1
end

begin
    prog = irexec
    button = KEY_DOWN
	config = ~/bin/control 'level -1 add'
    repeat = 1
end

begin
    prog = irexec
    button = KEY_RIGHT
	config = ~/bin/control 'balance +1 add'
    repeat = 1
end

begin
    prog = irexec
    button = KEY_LEFT
	config = ~/bin/control 'balance -1 add'
    repeat = 1
end

begin
    mode = loudness_ref
    button = KEY_MENU
end


# sources

begin
    button = KEY_TV
    prog = irexec
    config = ~/bin/control "source a"
end
begin
    button = KEY_VIDEO
    prog = irexec
    config = ~/bin/control "source net"
end
begin
    mode = mpd
    button = KEY_AUDIO
    prog = irexec
    config = ~/bin/control "source mpd"
end
begin
    mode = dvb
    button = KEY_CAMERA
    prog = irexec
    config = ~/bin/control "source dvb"
end

